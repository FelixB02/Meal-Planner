{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('css/showusermeal.css') }}" rel="stylesheet" type="text/css"/>

{% endblock %}

{% block title %}Meal{% endblock %}

{% block body %}
<div class="container mt-5 w-50">
    <div class="d-flex">

            <img class="img-user-details" src="{{ asset('/uploads/' ~ meal.picture) }}" style="width: 25rem">

        
        <div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ meal.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ meal.name }}</td>
                    </tr>
                    <tr>
                        <th>Picture</th>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>{{ meal.category }}</td>
                    </tr>
                    <tr>
                        <th>Calories</th>
                        <td>{{ meal.calories }}</td>
                    </tr>
                    <tr>
                        <th>Rating</th>
                        <td>{{ meal.rating }}</td>
                    </tr>
                    <tr>
                        <th>Preparation</th>
                        <td>{{ meal.preparation }}</td>
                    </tr>
                    <tr>
                        <th>Cooking_time</th>
                        <td>{{ meal.cookingTime }}</td>
                    </tr>
                    {% for ing in ingredient %}
                    <tr>
                        <th>Ingredients</th>
                        <td>{{ ing }}</td>
                    </tr>
                    {% endfor %}
                    
                </tbody>
                
            </table>

    <a href="{{ path('app_meal_user_edit', {'id': meal.id}) }}">edit</a>
    </div>
</div>

{% endblock %}
