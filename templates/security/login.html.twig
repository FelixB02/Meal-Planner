{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<link href="{{ asset('css/login.css') }}" rel="stylesheet" type="text/css"/>

<form method="post" class="d-flex flex-lg-row flex-md-column flex-sm-column flex-xs-column">
<div class="form-left">
  <img src="../../pictures/logo.png" alt="Logo" style="filter: drop-shadow(3px 3px 1px black)">
  <h2>HealthyMeal</h2>
  <p>Plan your meals, live healthy. </p>
</div>
<div class="form-right">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control login" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    <div class="wrapper text-center">
        <div class="link_wrapper">
        <button id="mybtn" type="submit">Login</button>
        <div class="icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 268.832 268.832">
        <path d="M265.17 125.577l-80-80c-4.88-4.88-12.796-4.88-17.677 0-4.882 4.882-4.882 12.796 0 17.678l58.66 58.66H12.5c-6.903 0-12.5 5.598-12.5 12.5 0 6.903 5.597 12.5 12.5 12.5h213.654l-58.66 58.662c-4.88 4.882-4.88 12.796 0 17.678 2.44 2.44 5.64 3.66 8.84 3.66s6.398-1.22 8.84-3.66l79.997-80c4.883-4.882 4.883-12.796 0-17.678z"/>
        </svg>
        </div>
        </div>
        </div>
        <p class="mt-2">Not a member yet? <a href="/register">Create an account! </a> </p>
    </div>
</form>


{% endblock %}
