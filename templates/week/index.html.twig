      <button class="btn btn-primary m-2" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseExample7" aria-expanded="false" aria-controls="multiCollapseExample7">Sunday</button>
      <button class="btn btn-primary m-2" type="button" data-bs-toggle="collapse" data-bs-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2 multiCollapseExample3 multiCollapseExample4 multiCollapseExample5  multiCollapseExample6  multiCollapseExample7">show/hide all days</button>
  </div>

  <div class="col-10">
  <div class="row gx-4 ">

    <div class="col-lg-4 col-md-6">
      <div class="collapse multi-collapse" id="multiCollapseExample1">
        {% if monday.name is defined %}
        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-xs-12">
        <div class="card" style="width: 18rem;">
            <img height="180px" src="{{asset("uploads/" ~ monday.picture)}}" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title text-center">{{monday.name}}(monday)</h5>
              <a href="#" class="btn btn-primary">See Details</a>
            </div>
          </div>
        </div>
